

@model ProductViewModel
@inject IServiceManager serviceManager

@{


    var Brands = new SelectList(serviceManager.ProductService.GetBrandsAsync().Result, "Id", "Name");
    var Types = new SelectList(serviceManager.ProductService.GetCategoriesAsync().Result, "Id", "Name");
    if (Model is not null)
    {
        TempData["Brands"] = JsonSerializer.Serialize(Model.ProductBrand);
        TempData["Category"] = JsonSerializer.Serialize(Model.ProductCategory);
    }


}

<div class="form-group">
    <label asp-for="Image" class="col-form-label"></label>
    <input asp-for="Image" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description" class="col-form-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Price" class="col-form-label"></label>
    <input asp-for="Price" class="form-control" type="number" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="BrandId" class="col-form-label">Product Brand</label>
    <select class="form-control" asp-for="BrandId" asp-items="Brands">
        <option value="">-- Select Brand --</option>
    </select>
    <span asp-validation-for="BrandId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="CategoryId" class="col-form-label">Product Category</label>
    <select class="form-control" asp-for="CategoryId" asp-items="Types">
        <option value="">-- Select Type --</option>
     
    </select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>
</div>
