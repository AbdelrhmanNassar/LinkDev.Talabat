@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">

        <thead>

            <tr>

            
                <td>@Html.DisplayNameFor(e => e.Name)td>
                <td>@Html.DisplayNameFor(e => e.DisplayName)</td>
                <td>@Html.DisplayNameFor(e => e.Email)</td>
                <td>@Html.DisplayNameFor(e => e.PhoneNumber)</td>
                <td>Roles</td>
                <td>Action</td>


            </tr>


        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td> @user.Name </td>
                    <td> @user.DisplayName </td>
                    <td> @user.Email </td>
                    <td> @user.PhoneNumber </td>
                    <td> @string.Join(",", user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-controller="User" asp-action="Edit" asp-route-id=@user.Id> Edit</a>
                        
                    </td>
                </tr>
            }



        </tbody>





    </table>
}
else
{
    <h1>No User Exisits</h1>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
