
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<h1>All Roles</h1>
<pr></pr>

<partial name="EditPartialView" model="new RoleViewModel()" />
@if (Model.Count() > 0 )
{
    <table class="table table-striped table-hover">
     
        <thead>

            <tr>

                <td>@Html.DisplayNameFor(e => e.Id)</td>
                <td>@Html.DisplayNameFor(e=>e.Name)</td>
                <td>Action</td>

                

            </tr>


        </thead>

        <tbody>
            @foreach(var role in Model)
            {
                   <tr>
                    <td> @role.Id</td>
                    <td> @role.Name</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-controller="Role" asp-action="Edit" asp-route-id=@role.Id> Edit </a>
                        <a class="btn btn-outline-danger" asp-controller="Role" asp-action="Delete" asp-route-id=@role.Id> Delete </a>
                    </td>
                </tr>
            }



        </tbody>





    </table>
}
else
{
    <h1>No Role Exisits</h1>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
             }
